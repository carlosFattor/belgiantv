<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
	<!-- http://code.google.com/appengine/docs/java/config/cron.html -->
	<cron>
		<url>/trigger/yelo</url>
		<description>Load yelo data for the next days</description>
		<schedule>every day 02:00</schedule>
	</cron>
	<cron>
		<url>/trigger/imdb</url>
		<description>Load imdb data</description>
		<schedule>every 6 hours synchronized</schedule>
	</cron>
	<cron>
		<url>/trigger/tmdb</url>
		<description>Load tmdb data</description>
		<schedule>every day 03:00</schedule>
	</cron>
	<cron>
		<url>/trigger/keepalive</url>
		<description>Keep an instance online</description>
		<schedule>every 2 minutes synchronized</schedule>
	</cron>
